// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        String    @id @default(uuid())
  vk_id                     String?   @unique
  username                  String    @unique
  email                     String?   @unique
  phone                     String?   @unique
  password_hash             String?
  xp                        Int       @default(0)
  level                     Int       @default(1)
  profile_theme_id          String?
  main_info_theme           String?
  background_icons          Json      @default("[]")
  privacy_settings          Json      @default("{\"show_achievements\": true, \"show_level\": true, \"show_profile\": true}")
  bio                       String?
  badges                    Json      @default("[]")
  pinned_achievements       Json      @default("[]")
  priority_achievements     Json      @default("[]")
  streak                    Int       @default(0)
  last_activity_date        DateTime?
  uniqueness_score          Float?
  growth_rate               Float?
  fastest_achievement_days  Int?
  fastest_achievement_title String?
  is_admin                  Boolean   @default(false)
  created_at                DateTime  @default(now())
  updated_at                DateTime  @updatedAt

  profile_theme        ProfileTheme?         @relation(fields: [profile_theme_id], references: [id], onDelete: SetNull)
  userAchievements     UserAchievement[]
  categories           Category[]
  platformAccounts     PlatformAccount[]
  refreshTokens        RefreshToken[]
  notifications        Notification[]
  achievementComments  AchievementComment[]
  achievementLikes     AchievementLike[]
  achievementFavorites AchievementFavorite[]

  @@index([email])
  @@index([phone])
  @@index([username])
}

model Achievement {
  id          String   @id @default(uuid())
  title       String
  description String
  icon_url    String?
  rarity      Rarity   @default(COMMON)
  category_id String
  xp_reward   Int      @default(100)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  category         Category          @relation(fields: [category_id], references: [id], onDelete: Cascade)
  userAchievements UserAchievement[]

  @@index([category_id])
}

model Category {
  id         String   @id @default(uuid())
  name       String
  icon_url   String?
  is_custom  Boolean  @default(false)
  creator_id String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  creator      User?         @relation(fields: [creator_id], references: [id], onDelete: SetNull)
  achievements Achievement[]

  @@index([creator_id])
}

model UserAchievement {
  id              String    @id @default(uuid())
  user_id         String
  achievement_id  String
  unlocked_at     DateTime  @default(now())
  is_public       Boolean   @default(true)
  completion_date DateTime?
  difficulty      Int? // 1-5
  impressions     String?
  is_main         Boolean   @default(false)
  can_like        Boolean   @default(true)
  can_comment     Boolean   @default(true)
  is_hidden       Boolean   @default(false)

  user        User        @relation(fields: [user_id], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievement_id], references: [id], onDelete: Cascade)

  comments  AchievementComment[]
  likes     AchievementLike[]
  favorites AchievementFavorite[]
  photos    AchievementPhoto[]

  @@unique([user_id, achievement_id])
  @@index([user_id])
  @@index([achievement_id])
}

model ProfileTheme {
  id            String   @id @default(uuid())
  name          String?
  preview_url   String?
  cost          Int      @default(0)
  xp_required   Int      @default(0)
  profile_color String? // blue, purple, green, orange, pink, dark, red, yellow
  created_at    DateTime @default(now())

  users User[]

  @@index([profile_color])
}

model PlatformAccount {
  id               String   @id @default(uuid())
  user_id          String
  platform         String // WEB, VK, TELEGRAM
  platform_user_id String
  linked_at        DateTime @default(now())
  username         String?
  avatar_url       String?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([platform, platform_user_id])
  @@index([user_id])
  @@index([platform, platform_user_id])
}

model RefreshToken {
  id         String   @id @default(uuid())
  user_id    String
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([token])
  @@index([expires_at])
}

model Notification {
  id         String   @id @default(uuid())
  user_id    String?
  title      String
  message    String
  type       String   @default("info") // info, success, warning, error
  is_read    Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User? @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([is_read])
  @@index([created_at])
}

model AchievementComment {
  id                  String    @id @default(uuid())
  user_achievement_id String
  user_id             String
  parent_comment_id   String?
  text                String
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt
  deleted_at          DateTime?

  userAchievement UserAchievement      @relation(fields: [user_achievement_id], references: [id], onDelete: Cascade)
  user            User                 @relation(fields: [user_id], references: [id], onDelete: Cascade)
  parentComment   AchievementComment?  @relation("CommentReplies", fields: [parent_comment_id], references: [id], onDelete: Cascade)
  replies         AchievementComment[] @relation("CommentReplies")

  @@index([user_achievement_id])
  @@index([user_id])
  @@index([parent_comment_id])
  @@index([created_at])
}

model AchievementLike {
  id                  String   @id @default(uuid())
  user_achievement_id String
  user_id             String
  created_at          DateTime @default(now())

  userAchievement UserAchievement @relation(fields: [user_achievement_id], references: [id], onDelete: Cascade)
  user            User            @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_achievement_id, user_id])
  @@index([user_achievement_id])
  @@index([user_id])
}

model AchievementFavorite {
  id                  String   @id @default(uuid())
  user_id             String
  user_achievement_id String
  created_at          DateTime @default(now())

  user            User            @relation(fields: [user_id], references: [id], onDelete: Cascade)
  userAchievement UserAchievement @relation(fields: [user_achievement_id], references: [id], onDelete: Cascade)

  @@unique([user_id, user_achievement_id])
  @@index([user_id])
  @@index([user_achievement_id])
}

model AchievementPhoto {
  id                  String   @id @default(uuid())
  user_achievement_id String
  file_path           String
  file_url            String
  order               Int      @default(0)
  created_at          DateTime @default(now())

  userAchievement UserAchievement @relation(fields: [user_achievement_id], references: [id], onDelete: Cascade)

  @@index([user_achievement_id])
  @@index([order])
}

enum Rarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}
